# Sprint 2a - LÄ°ST ÆMÆLÄ°YYATLARI

# Task 1
print("\nTask 1")
reqemler = [5, 10, 15, 20]
print(reqemler)

# Task 2
print("\nTask 2")
print(len(reqemler))

# Task 3
print("\nTask 3")
reqemler.append(25)
print(reqemler)

# Task 4
print("\nTask 4")
reqemler.insert(2, 12)
print(reqemler)

# Task 5
print("\nTask 5")
list1 = [1, 2, 3]
list2 = [4, 5, 6]
birlesmis = list1 + list2
print(birlesmis)

# Task 6
print("\nTask 6")
print(reqemler[2:4])

# Task 7
print("\nTask 7")
reqemler[0] = 50
print(reqemler)

# Task 8
print("\nTask 8")
print(19 in reqemler)

# Task 9
print("\nTask 9")
lst = ["a", "b", "a", "c"]
print(lst.count("a"))

# Task 10
print("\nTask 10")
lst2 = ["x", "y", "x", "z"]
lst2 = [i for i in lst2 if i != "x"]
print(lst2)

# Task 11
print("\nTask 11")
lst3 = [7, 2, 9, 1]
lst3.sort(reverse=True)
print(lst3)

# Task 12
print("\nTask 12")
print([i for i in reqemler if i > 10])


