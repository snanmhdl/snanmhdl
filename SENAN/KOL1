# Sprint 2b - PANDAS VÆ DATAFRAME ÆMÆLÄ°YYATLARI

import pandas as pd

# Task 1
print("\nTask 1")
s1 = pd.Series([10, 20, 30, 40])
print(s1)

# Task 2
print("\nTask 2")
s1.index = ['w', 'x', 'y', 'z']
print(s1)

# Task 3
print("\nTask 3")
s2 = pd.Series({'p': 5, 'q': 10, 'r': 15})
print(s2)

# Task 4
print("\nTask 4")
print(s2['q'])

# Task 5
print("\nTask 5")
print(s1[s1 > 25])

# Task 6
print("\nTask 6")
print(s1[s1 > 20] / 10)

# Task 7
print("\nTask 7")
df1 = pd.DataFrame([[1, 2], [3, 4]])
print(df1)

# Task 8
print("\nTask 8")
df1.index = ['r1', 'r2']
df1.columns = ['c1', 'c2']
print(df1)

# Task 9
print("\nTask 9")
df2 = pd.DataFrame({'A': [1, 2], 'B': [3, 4]})
print(df2)

# Task 10
print("\nTask 10")
print(df2[df2['A'] > 1])
